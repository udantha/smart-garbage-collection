
<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
    <img class="mr-3" src="/garbage-icon.png" alt="" width="48" height="48">
    <div class="lh-100">
      <h6 class="mb-0 text-white lh-100"> Bin List</h6>
      <small>List of existing bins</small>
    </div>
    <div class="rh-100">
        <a class="btn" href="/bin"><i class="fa fa-plus"></i> Create New</a>
    </div>
  </div>

<div class="my-3 p-3 bg-white rounded shadow-sm">
    <div class="media text-muted pt-3">
      <table class="table table-striped">
    <thead>
        <tr>
            <th>Bin ID</th>
            <th>Bin Height</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
        <tr>
            <td>{{this.binId}}</td>
            <td>{{this.binHeight}}</td>
            <td>
                <a href="/bin/{{this._id}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/bin/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
    </div>
  </div>
